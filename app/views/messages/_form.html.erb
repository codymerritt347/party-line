<%= form_with(model: @message) do |f| %>
  <%= f.label :content, "Message Content"%><br>
  <%= f.text_field :content %><br>

  <%= f.label :party_id, "Party Id" %><br>
  <%= f.collection_select :party_id, Party.all, :id, :name %><br>

  <%= f.label :user_id, "User ID" %><br>
  <%= f.collection_select :user_id, User.all, :id, :first_name %><br>

  <%= f.submit %>
<% end %>