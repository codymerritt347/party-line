<div class="simple-container">

  <div class="banner">
    PartyLine
  </div>

  <nav>
    <%= button_to "Logout", logout_path, method: :delete, class:"redButton" %>
    <%= link_to "New Status", new_user_status_path(@user), class:"blueButton" %>
  </nav>

  <div class="full-window">
    <div class="mainWindow">
      <h1><%= @user.screen_name %></h1>
      <div class="status-bubble">
        <%= @user.statuses.last.content %>
      </div>
      <%= @user.statuses.last.hours_ago %>
      <%= render partial: "statuses/form", user:@user %>
    </div>
    <div class="mainWindow">
      <h3><%= @user.screen_name %>'s Parties</h3>
      <% if @user.parties.count != 0 %>
        <% @user.parties.each do |party| %>
          <%= link_to party.name, party %><br>
        <% end %>
      <% else %>
        <h4>You have no parties. Let's start one!</h4>
      <% end %>
      <%= link_to "New Party", new_party_path, class:"blueButton" %><br>
    </div>
  </div>

  <footer>
  </footer>
</div>

<div>
  <%= link_to "Edit User", edit_user_path(@user) %><br>
  <%= button_to "Delete User", @user, method: :delete, data: { confirm: "Are you sure?" } %><br>
  
</div>