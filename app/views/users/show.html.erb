<div>
  <h1><%= @user.full_name %></h1>
</div>
<div>
  <h3>Current Status:</h3>
  <%= @user.statuses.last.content %><br>
  <%= link_to "New Status", new_user_status_path(@user) %><br>
</div>
<div>
  <h3><%= @user.screen_name %>'s Parties</h3>
  <% if @user.parties.count != 0 %>
    <% @user.parties.each do |party| %>
      <%= link_to party.name, party %><br>
    <% end %>
  <% else %>
    <h4>You have no parties. Let's start one!</h4>
  <% end %>
  <%= link_to "New Party", new_party_path %><br>
</div>
<div>
  <%= link_to "Edit User", edit_user_path(@user) %><br>
  <%= button_to "Delete User", @user, method: :delete, data: { confirm: "Are you sure?" } %><br>
  <%= form_tag ({controller: 'sessions', action: 'destroy', method: 'post'}) do %>
  <input type=submit value='logout'>
<% end %>
</div>

