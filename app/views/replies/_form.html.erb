<%= form_for(@reply) do |f| %>
  <%= f.label :content, "Reply Content" %><br>
  <%= f.text_area :content %><br>

  <%= f.label :user_id, "User ID" %><br>
  <%= f.number_field :user_id %><br>

  <%= f.label :message_id, "Message ID" %><br>
  <%= f.number_field :message_id %><br>

  <%= f.submit %>
<% end %>